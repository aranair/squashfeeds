<p class="mini-explanatory">*Teams without points are hidden by default.</p>
<table class="table">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
        <%- Grade.keys.each do |grade| %>
          <%= render_team_header(grade) %>
        <%- end %>
    </tr>
  </thead>
  <tbody>
    <% @teams.each_with_index do |team, rank| %>
      <tr>
        <td><%= rank+1 %></td>
        <td><%= link_to team.name, team_path(team, params.merge(grade: @grade))%></td>
        <%- Grade.keys.each do |grade| %>
          <%= render_team_points(team, grade) %>
        <%- end %>
      </tr>
    <% end %>
  </tbody>
</table>
