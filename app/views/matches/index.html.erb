<div class="row">
  <div class="col-xs-12">
    <%= link_to new_match_path do %>
      <%= button_tag type: 'button', class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-plus"></span>
      <% end %>
    <% end %>
    <%= render 'shared/grade_links' %>
  </div>
</div>
